{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: g++-13 build",
            "type": "cppbuild",
            "command": "g++",
            "args": [
                "-I",
                "C:/Users/thati/Cp/library-cpp/",
                "-D",
                "LOCAL",
                "-w",
                "-std=gnu++20",
                "-Wall",
                "-Wextra",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Tasks generated by the debugger. "
        },
        {
            "label": "expand library",
            "type": "shell",
            "command": "python",
            "args": [
                "./scripts/expander.py",
                "--lib",
                "${Env:LIB_CPP}",
                "--out",
                "${relativeFileDirname}/combined.cpp",
                "${file}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
    ],
    "inputs": [
        {
            "id": "filename_without_extension",
            "description": "filename without extension",
            "default": "Main",
            "type": "promptString"
        },
        {
            "id": "directory",
            "description": "directory",
            "default": "src/",
            "type": "promptString"
        },
        {
            "id": "range_from",
            "description": "",
            "default": "A",
            "type": "promptString"
        },
        {
            "id": "range_to",
            "description": "",
            "default": "F",
            "type": "promptString"
        }
    ]
}